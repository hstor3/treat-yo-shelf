<div class="header-text-search">
  <h1>
    Search
  </h1>
</div>
<div class="searchbar center">
  <form class="search-form">
    <input
      class="form-input"
      type="text"
      autocomplete="search"
      placeholder="Search for your favorite book"
      id="searchTerm"
    />
    <button class="search-btn" type="submit">
      <i class="fas fa-search"></i>
    </button>
  </form>
</div>
<div class="searchCard search-display-card" id="searchResultsSection"></div>